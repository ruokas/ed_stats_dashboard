{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["node"]
  },
  "include": [
    "src/app/runtime/utils/common.js",
    "src/data/csv.js",
    "src/state/**/*.js",
    "tests/data/csv.test.js",
    "tests/runtime/selectors.test.js"
  ],
  "exclude": ["node_modules"]
}
